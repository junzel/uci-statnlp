{
  "dataset_reader": {
    "type": "informed_seq2seq_reader",
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "token_characters": {
        "type": "characters"
      }
    },
    "extra_token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    },
    "target_token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "token_characters": {
        "type": "characters"
      }
    }
  },
  "train_data_path": "./data/python_train.txt",
  "validation_data_path": "./data/python_val.txt",
  "test_data_path": "./data/python_test.txt",
  "evaluate_on_test": true,
  "model": {
    "type": "informed_seq2seq",
    "max_decoding_steps": 20,
    "source_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 30
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "embedding_dim": 30
          },
          "encoder": {
            "type": "rnn",
            "input_size": 30,
            "hidden_size": 40,
            "num_layers": 1,
            "dropout": 0.25
          }
        }
      }
    },
    "extra_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 20
        }
      }
    },
    "encoder": {
      "type": "rnn",
      "input_size": 70,
      "hidden_size": 90,
      "num_layers": 1
    },
    "extra_encoder": {
      "type": "rnn",
      "input_size": 20,
      "hidden_size": 25,
      "num_layers": 1
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 20
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "num_epochs": 100,
    "validation_metric": "+BLEU",
    "cuda_device": -1
  }
}